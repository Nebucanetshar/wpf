<Window x:Class="WPF3D_MVVM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:h ="http://helix-toolkit.org/wpf"
        
        xmlns:local="clr-namespace:WPF3D_MVVM"
        xmlns:sphère="clr-namespace:Sphère_MVVM"
        xmlns:manipulation="clr-namespace:WPF_MAN"
        
        Title="MainWindow" Height="450" Width="800">

    <!--<Window.DataContext>
        <local:Spiral/>
    </Window.DataContext>-->

    <Window.DataContext>
        <manipulation:ManipCamera/>
    </Window.DataContext>

    <Window.Resources>
        <sphère:Sphère x:Key="sph"/>
        <manipulation:ManipCamera x:Key="manip"/>
    </Window.Resources>

    <Grid>
        <!--<h:HelixViewport3D>
            <h:SunLight/>
            <h:GridLinesVisual3D Length="10" Width="10" MinorDistance="1" MajorDistance="5"/>
            <h:LinesVisual3D Thickness="2" Color="Blue" Points="{Binding Courbe}"/>
        </h:HelixViewport3D>-->

        <h:HelixViewport3D DataContext="{StaticResource sph}" Margin="0,10,0,10">
            <h:SunLight/>
            <h:GridLinesVisual3D Length="8" Width="8" MinorDistance="1" MajorDistance="1"/>
            
            <!--<h:GridLinesVisual3D Length="8" Width="5" MinorDistance="1" 
                                 MajorDistance="1" Normal="0,1,0" Center="0,-4,2.5"/>
            <h:GridLinesVisual3D Length="4" Width="9" MinorDistance="1" 
                                 MajorDistance="1" Normal="1,0,0" Center="4,0,3" />-->
                                 
            <h:SphereVisual3D  Radius="2" Center="{Binding BindSphère}" 
                               Fill="{Binding BindColor, PresentationTraceSources.TraceLevel =High}"/>
        </h:HelixViewport3D>
    </Grid>
</Window>
