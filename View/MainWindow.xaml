<Window x:Class="WPF3D_MVVM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:h ="http://helix-toolkit.org/wpf"
        
        xmlns:local="clr-namespace:WPF3D_MVVM"
        
        Title="MainWindow" Height="450" Width="800">

    <Window.DataContext>
        <local:Spiral/>
    </Window.DataContext>
    
    <Grid>
        <h:HelixViewport3D>
            <h:SunLight/>
            <h:GridLinesVisual3D Length="10" Width="10" MinorDistance="1" MajorDistance="5"/>
            <h:LinesVisual3D Thickness="2" Color="Blue" Points="{Binding Courbe}"/>
        </h:HelixViewport3D>
    </Grid>
</Window>
