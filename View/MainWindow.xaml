<Window x:Class="WPF3D_MVVM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        
        xmlns:h ="http://helix-toolkit.org/wpf"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:p="clr-namespace:WPF_PROXY"
        xmlns:m="clr-namespace:WPF_MAN" 
        
        Title="MainWindow" Height="450" Width="800">

    <Window.Resources>
        <p:BindingProxy x:Key="proxy" Data="{Binding}"/>
    </Window.Resources>
   
        <Grid>
        <h:HelixViewport3D x:Name="Helix">
            <h:SunLight/>
            <h:GridLinesVisual3D Length="10" Width="10" MinorDistance="1" MajorDistance="1"/>
        </h:HelixViewport3D>
    </Grid>
</Window>
