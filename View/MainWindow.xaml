<Window x:Class="WPF3D_MVVM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        
        xmlns:h ="http://helix-toolkit.org/wpf"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:p="clr-namespace:WPF_PROXY"
        xmlns:m="clr-namespace:WPF_MOVE"
        xmlns:c="clr-namespace:WPF_CONTROL"
        
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <m:Mouvement/>
    </Window.DataContext>
    
    <Window.Resources>
        <p:BindingProxy x:Key="proxy" Data="{Binding}"/>
    </Window.Resources>

    <Grid>
        <h:HelixViewport3D x:Name="Helix">

            <i:Interaction.Behaviors>
                <p:BindingBehavior Orbite="{Binding Data.Position, Source={StaticResource proxy}}"/>
            </i:Interaction.Behaviors>
            
            <h:SunLight/>
            <h:GridLinesVisual3D Length="7" Width="7" MinorDistance="1" MajorDistance="1"/>
            <h:SphereVisual3D Radius="0.5"/>

            <i:Interaction.Triggers>
                <i:EventTrigger EventName="MouseDown">
                    <i:InvokeCommandAction Command="{Binding Source={x:Static c:Control.Instance}, Path=Marche}" 
                                           CommandParameter="{Binding Animate}"/>
                </i:EventTrigger>
            </i:Interaction.Triggers>
            
        </h:HelixViewport3D>
    </Grid>
</Window>
